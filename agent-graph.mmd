graph TD

    %% Node styles
    classDef start fill:#2ECC71,stroke:#27AE60,stroke-width:2px
    classDef end fill:#E74C3C,stroke:#C0392B,stroke-width:2px
    classDef agent fill:#3498DB,stroke:#2980B9,stroke-width:2px
    classDef tool fill:#F1C40F,stroke:#F39C12,stroke-width:2px

    START((Start))
    END((End))

    %% Nodes
    router[router]
    class router agent
    billing[billing]
    class billing agent

    %% Edges
    START --> router
    router -->|billing| billing
    router -->|general| END
    router -->|end| END
    billing -->|tools| tools
    billing -->|general| billing
    billing -->|end| END
    tools --> billing

    class START start
    class END end
